<Rule@BGTemplate>:

	BorderField:
		z: 1
		border_color: 0.00, 0.00, 0.00, 1.00
		border_radius: 4
		border_width: 5
		size: root.size

	ImageField:
		id: default
		size_hint: (1.0, 1.0)

	TextField:
		pos_hint: {'y': 0.81, 'x': 0.05}
		size_hint: (0.92, 0.16)
		multiline: False
		valign: "top"
		autofit: True
		id: title
		halign: "center"
		z: 2

	TextField:
		pos_hint: {'y': 0.02, 'x': 0.05}
		size_hint: (0.92, 0.79)
		valign: "top"
		font_name: "DroidSans.ttf"
		id: rule
		font_size: 32
		markup: True
		z: 2