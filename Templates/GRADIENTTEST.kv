<GradientTest@BGTemplate>:
	size: 250, 250.0

	EllipseFField:
		editable: False
		id: bg
		size: [250, 250]
		#:import cgradient effects.radial_gradient
		texture: cgradient(border_color=(1,1,1), center_color=(0,0,0))

	EllipseFField:
		factor: .9
		source: "images/judge.jpg"
		angle_start: 0
		id: overlay
		size: self.factor*root.width, self.factor*root.height
		center: root.center
		default_attr: 'factor'
		#:import FloatEditor editors.FloatEditor
		params: {'factor': FloatEditor}

