#:import h_flip img_xfos.h_flip
#:import fe editors.FloatEditor

<Standup@BGTemplate>:
	stand_height: cm(5)
	feet_depth: cm(2)
	
	vars: {'width':fe, 'stand_height':fe,'feet_depth':fe}
	
	height: ( root.stand_height + root.feet_depth) *2
	
	RectangleField:
		id: feet
		default_attr: "fg_color"
		size_hint: 1.00, root.feet_depth/root.height
		fg_color: front.line_color
		line_color: 0,0,0,1


	BorderField:
		id: front
		y: feet.top
		size_hint: 1.00, root.stand_height/root.height
		auto_color: True
		line_width: 1
		inside_border: True
		corner_radius: 15

	TransfoField:
		id: back
		y: front.top
		size_hint: front.size_hint
		angle: 180
		src: front
		xfos: h_flip,

	RectangleField:
		angle: 180
		y: back.top
		fg_color: feet.fg_color
		size_hint: feet.size_hint
		line_color: 0,0,0,1
