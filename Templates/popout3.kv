<popout@BGTemplate>:
	size: cm(6.35), cm(8.80)
	SubImageField:
		border_rgba: 0.00, 0.50, 0.31, 0.80
		styles: "border"
		border_dash_offset: 0
		bg_color: 1, 1, 1, 1
		border_width: 2
		size: root.width, 0.84 * root.height
		border_dash_length: 0
		dimension: "images/judge.jpg", 0.01, -0.00, 1.00, 0.77

	TextField:
		text: "The title"
		pos: 0.01 * root.width, 0.84 * root.height
		size: root.width, 0.16 * root.height
		autofit: True
		bg_color: 0.00, 0.00, 0.00, 1.00
		font_size: 45.00
		halign: "center"

	ImageField:
		pos: -0.01 * root.width, 0.07 * root.height
		allow_stretch: True
		size: root.width, root.height
		source: "images\simple_output.png"
		keep_ratio: False
		z: 3
