<Lidbox_bottom@BGTemplate>:
	card_width: cm(6.35)
	card_height: cm(8.8)
	card_depth: cm(5.0)
	size: 2*self.card_height + self.card_depth, 2*self.card_height + self.card_width

	#:import fe editors.MetricEditor
	vars: {'card_width':fe,'card_height':fe,'card_depth':fe}

	ImageField:
		pos: root.card_height, 0
		size: root.card_depth, root.card_height
		allow_stretch: True
		keep_ratio: False
		id: side_1
		angle: 180

	ImageField:
		pos: root.card_height, root.card_height + root.card_width
		size: root.card_depth, root.card_height
		allow_stretch: True
		keep_ratio: False
		id: side_2

	ImageField:
		pos: root.card_height + root.card_depth, root.card_height
		size: root.card_height, root.card_width
		allow_stretch: True
		keep_ratio: False
		id: side_3

	RectangleField:
		pos: root.card_height + root.card_depth, root.card_height - root.card_height*.2
		size: root.card_height, .2* root.card_height
		line_color: 0,0,0,1

	RectangleField:
		pos: root.card_height + root.card_depth, root.card_height + root.card_width
		size: root.card_height, .2* root.card_height
		line_color: 0,0,0,1

	ImageField:
		pos: 0, root.card_height
		size: root.card_height, root.card_width
		allow_stretch: True
		keep_ratio: False
		id: side_4


	RectangleField:
		pos: 0, root.card_height - root.card_height*.2
		size: root.card_height, .2* root.card_height
		line_color: 0,0,0,1

	RectangleField:
		pos: 0, root.card_height + root.card_width
		size: root.card_height, .2* root.card_height
		line_color: 0,0,0,1

	ImageField:
		pos: root.card_height, root.card_height
		size: root.card_depth, root.card_width
		allow_stretch: True
		keep_ratio: False
		id:  bottom


