<kotpouwerup@BGTemplate>:
    size:'8cm','8cm'

    BorderField:
        id: border
        border_width: '0.4cm'
        border_color: [0,0,0,1]
        size: root.size
        pos: 0,0

    ImageField:
        id: background
        size: '7.2cm','7.2cm'
        pos: '0.4cm','0.4cm'
        allow_stretch: True
        keep_ratio: False    

    TextField:
        id: title
        size: '4cm','0.75cm'
        pos: '4cm','7.3cm'
        halign: "center"
        color: 1,1,1,1
        font_size: 36
        autoshrink: True