#:import CARD conf.card_format
#:import PAGE conf.page_format

#:import FloatEditor editors.IntEditor

<TuckBox@BGTemplate>:
    thedepth: 0.0
    size_hint: None, None
    large:  (15 + CARD.width + PAGE.left + PAGE.right +10)
    length: (CARD.height + PAGE.top + PAGE.bottom + 15)
    depth: cm(float(self.thedepth))
    width: 3*self.depth + 2 * self.large + 1
    height: 3*self.depth+self.length + 1
    ImageField:
        id: left
        allow_stretch: True
        keep_ratio: False
        pos: root.depth + root.large, root.depth+ root.depth/2
        size: root.length, root.depth
        angle: 90
    ImageField:
        id: right
        allow_stretch: True
        keep_ratio: False
        source: left.source
        angle: 270
        pos: 0, root.depth+ root.depth/2
        size: root.length, root.depth
    ImageField:
        id: top
        allow_stretch: True
        keep_ratio: False
    ImageField:
        id: bottom
        allow_stretch: True
        keep_ratio: False
        source: top.source
    ImageField:
        id: front
        allow_stretch: True
        keep_ratio: False
        pos: root.large+2*root.depth, root.depth + root.depth/2
        size: root.large, root.length
    ImageField:
        id: back
        allow_stretch: True
        keep_ratio: False
        pos: root.depth, root.depth+root.depth/2
        size: root.large, root.length

<BigBox@TuckBox>:
    ImageField:
        id: one_more
        angle: 90
