<TWOR1B@BGTemplate>:
	size: cm(21.00), cm(29.70)
	RectangleField:
		line_width: 3
		size: root.width, root.height

	RectangleField:
		size: root.width, 0.75 * root.height

	RectangleField:
		size: root.width, 0.25 * root.height

	RectangleField:
		size: root.width, 0.50 * root.height

	RectangleField:
		line_color: 1.00, 1, 1, 1
		dash_offset: 3
		dash_length: 5
		size: 0.50 * root.width, root.height

	ImageField:
		z: 1
		pos: 0.00 * root.width, 0.75 * root.height
		size: 0.50 * root.width, 0.25 * root.height
        source: 'tmp/img/passport_front.png'

	ImageField:
		z: 1
		pos: 0.00 * root.width, 0.5 * root.height
		size: 0.50 * root.width, 0.25 * root.height
        source: 'tmp/img/passport_back.png'

    ImgChoiceField:
		pos: 0.5 * root.width, 0.5 * root.height
		selection: "Bleu"
		size: 0.5* root.width, 0.25 * root.height
		id: Couleur
		choices: {'Bleu': 'tmp\\img\\blue_team.png', 'Gris': 'tmp\\img\\grey_team.png', 'Rouge': 'tmp\\img\\red_team.png'}
		z: 2

    ImgChoiceField:
		pos: 0.5 * root.width, 0.25 * root.height
		size: 0.5* root.width, 0.25 * root.height
		id: Team
		z: 2
		selection: "Bleu"
		choices: {'Vert': 'tmp\\img\\template_vert.png','Violet': 'tmp\\img\\template_violet.png',		    'Bleu': 'tmp\\img\\template_bleu.png',	    'Bleu/Rouge': 'tmp\\img\\template_double.png',		    'Rose': 'tmp\\img\\template_rose.png',		    'Gris': 'tmp\\img\\template_gris.png',		    'Rouge': 'tmp\\img\\template_rouge.png'}

	TextField:
		pos: cm(1)*12.76, 7.46*cm(1)
		size: 8.11*cm(1), 2.18*cm(1)
		angle: 180
		valign: "middle"
		autofit: True
		id: Titre
		z: 3
		font_size: 48

	TextField:
		pos: 10.1*cm(1), 9*cm(1)
		size: 6.12*cm(1), 4.09*cm(1)
		angle: 270
		autofit: True
		#font_size: 43.00
		z: 3
		text: "Equipe %s"%Team.selection
		font_size: 32
		bold: True
        multiline: False

	TextField:
		z: 1
		size: 0.35 * root.width, 0.35 * root.height
		pos: 0.57 * root.width, -0.05 * root.height
        id: details
        z: 1
        autofit: True
        angle: 270
        halign: 'center'
        valign: 'middle'
        font_size: 24