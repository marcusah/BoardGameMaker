#:import MetricEditor editors.MetricEditor
<mascarade@BGTemplate>:
    size:'6.3cm','8.8cm'
    attrs: {'width': MetricEditor, 'height': MetricEditor}
    #size: 744, 1039


    ImageField:
        id: background
        size: root.size
        pos: 0,0
        allow_stretch: True
        keep_ratio: False    

    ImageField:
        pos: 0, 1039-814 -30
        size: 680, 130
        source: 'images/flag.png'
        allow_stretch: True
        keep_ratio: False    


    ImageField:
        pos: 71, 1039-807-60
        size: 145,145
        source: 'images/redcircle.png'
        id: red

    BorderField:
        id: border
        border_width: 5
        border_color: [0,0,0,1]
        size: root.size
        pos: 0,0

    ImageField:
        id: Icon
        pos: 83, 1039-837
        size: 125,85

    TextField:
        id: title
        size: 107, 460
        pos: 211, 1039-825 -30
        halign: "center"
        color: 0,0,0,1
        font_size: 48

    TextField:
        id: rule
        size_hint: 0.66, 0.375
        pos_hint: {'x':0.166, 'y':0.125}
        
