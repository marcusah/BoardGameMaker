<TextTest@BGTemplate>:
    size: cm(6.35),cm(8.8)
    TextField:
        id: rule
        autofit: True
        size: cm(3), cm(2)
        pos: cm(2),cm(2)
        bg_color: 1,0,0,.5
        angle: 90
        halign: 'center'
        valign: 'middle'
    BorderField:
        id: border
        border_width: 10
        border_color: 1,1,0,1
        size: root.size