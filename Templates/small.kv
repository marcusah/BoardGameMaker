<small@BGTemplate>:
    size:'6.3cm','8.8cm'
    
    BorderField:
        id: border
        source: "images/shadow32.png"
        border_width: 5
#         size_hint: None,None
        size: root.size
        pos: 0,0
        
    ColorField:
        id: background
        rgba: 1,0,0,1
        size_hint: .5,.5
        pos_hint: {'x':.25,'y':.25}
        opacity: .3
        
    TextField:
        id: text
        label: "text10"
        line_height: .3
        size_hint: None,None
        pos: 0,0
        size: 200,50
        bg_color: 0,0,0,1

    TextField:
        id: text2
        text: str(ichoice.source)
        pos: 10,10
        size_hint: 0.1,0.1
        readonly: True

    ImgChoiceField:
        id: ichoice
        selection: "bh"
        choices: {'bh':'images/judge.jpg','down':'img/bgg.jpg'}
        size_hint: .25,.25
        pos_hint: {'x':0,'y':.75}
        allow_stretch: True

